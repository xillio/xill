use System, Assert;

// Simple single values
Assert.equals(System.toJSON(5), "5");
Assert.equals(System.toJSON("Hello"), '"Hello"');
Assert.equals(System.toJSON(null), "null");
Assert.equals(System.toJSON(false), "false");

// Lists
Assert.equals(System.toJSON([]), "[]");
Assert.equals(System.toJSON([1,2,3]), "[1,2,3]");
Assert.equals(System.toJSON([1,2,3], true), "[ 1, 2, 3 ]");

// Objects
Assert.equals(System.toJSON({}), "{}");
Assert.equals(System.toJSON({"hello": "world"}), '{"hello":"world"}');
