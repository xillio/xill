<?xml version="1.0" encoding="utf-8"?>
<function>
    <description>
        Decodes all ampersand-encoded characters in the provided string. Mainly used to decode XML characters to their
        original characters.
        Optionally you can provide the number of passes the decoder should run (defaults to 1).
    </description>
    <examples>
        <example title="Usage">
            <header>Single pass</header>
            <code><![CDATA[
                String.ampersandDecode("Money &amp;lt;&amp;amp;gt; Health");

                // Result: "Money &lt;&amp;gt; Health"
            ]]></code>
            <header>Multiple passes</header>
            <code><![CDATA[
                String.ampersandDecode("Money &amp;lt;&amp;amp;gt; Health", 2);

                // Result: "Money <&gt; Health"
                ]]>
            </code>
        </example>
    </examples>
    <references>
        <reference>
            ampersandEncode
        </reference>
    </references>
    <searchTags>
        ampersand, decode, encrypt
    </searchTags>
</function>