<?xml version="1.0" encoding="utf-8"?>
<function>
    <description>
        Converts the relative URL string relativeUrl to an absolute URL using the string pageUrl as base URL. Returns
        the resulting URL as a string.
    </description>
    <examples>
        <example title="Usage">
            <header>Child page</header>
            <code>
                String.absoluteURL("http://www.xillio.nl/calendar/", "movies");
                // Result: http://www.xillio.nl/calendar/movies
            </code>
            <header>One page up</header>
            <code>
                String.absoluteURL("http://www.xillio.nl/calendar/", "../");
                // Result: http://www.xillio.nl/
            </code>
        </example>
    </examples>
    <searchTags>
        absolute, relative
    </searchTags>
</function>