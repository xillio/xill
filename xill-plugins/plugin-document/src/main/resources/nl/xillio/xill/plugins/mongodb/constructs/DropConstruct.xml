<?xml version="1.0" encoding="utf-8"?>
<function>
    <description>
Provides a wrapper around the MongoDB [db.collection.drop](https://docs.mongodb.org/v3.0/reference/method/db.collection.drop/#db.collection.drop) method.
    </description>
    <examples>
        <example title="Usage">
            <header>Drop the collection `assets`</header>
            <code>
                use Mongo;
                Mongo.connect("udm_default");

                Mongo.dropIndexes("assets");
            </code>
        </example>
    </examples>
    <references>
        <reference>connect</reference>
    </references>
    <tags>
        mongodb
    </tags>
</function>
